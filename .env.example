# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
DOMAIN=whatsapp.abdullah-md.com
SECRET_KEY=your-super-secret-key-change-this
SESSION_SECRET=your-session-secret-change-this

# WhatsApp Configuration
WHATSAPP_VERSION=2.2413.1
WHATSAPP_BROWSER_NAME=Abdullah-Md Pro
WHATSAPP_BROWSER_VERSION=Chrome/121.0.0.0
MAX_SESSIONS=100
SESSION_TIMEOUT=86400000 # 24 hours

# Database Configuration (Optional)
MONGODB_URI=mongodb://localhost:27017/whatsapp_sessions
REDIS_URL=redis://localhost:6379
DATABASE_BACKUP_INTERVAL=86400000 # 24 hours

# Twilio Configuration (for SMS/Call fallbacks)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration (for Email fallback)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
SMTP_FROM=whatsapp@abdullah-md.com

# Security Configuration
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
JWT_SECRET=your-jwt-secret-change-this
JWT_EXPIRES_IN=7d
ENCRYPTION_KEY=your-32-character-encryption-key

# Storage Configuration
MAX_STORAGE_SIZE=1073741824 # 1GB
SESSION_RETENTION_DAYS=30
BACKUP_RETENTION_DAYS=7
CLEANUP_INTERVAL=3600000 # 1 hour

# Monitoring & Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
ERROR_FILE=./logs/error.log
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000 # 30 seconds

# WebSocket Configuration
WS_PORT=8080
WS_PATH=/socket.io
WS_PING_INTERVAL=25000
WS_PING_TIMEOUT=5000
WS_MAX_PAYLOAD=1000000 # 1MB

# API Configuration
API_VERSION=v1
API_PREFIX=/api
API_DOCS_ENABLED=true
API_RATE_LIMIT=true

# Frontend Configuration
FRONTEND_URL=https://whatsapp.abdullah-md.com
CDN_URL=https://cdn.abdullah-md.com
ASSETS_VERSION=4.0.0

# Third-party Services (Optional)
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=whatsapp-sessions

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# Feature Flags
FEATURE_BULK_GENERATE=true
FEATURE_ADVANCED_FALLBACKS=true
FEATURE_REAL_TIME_UPDATES=true
FEATURE_AUTO_BACKUP=true
FEATURE_MULTI_DEVICE=true
FEATURE_ADMIN_PANEL=true
FEATURE_API_KEYS=true

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System undergoing maintenance. We'll be back soon!

# Development Overrides (only for development)
# DEBUG=whatsapp:*
# NODE_TLS_REJECT_UNAUTHORIZED=0
